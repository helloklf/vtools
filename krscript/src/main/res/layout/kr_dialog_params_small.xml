<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialogRoot"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/krscript_item_ripple_inactive"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/dialogTitle" />
        <TextView
            android:id="@+id/desc"
            style="@style/dialogDesc" />
        <TextView
            android:id="@+id/warn"
            style="@style/dialogWarn" />

        <FrameLayout
            android:id="@+id/kr_params_center"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@id/btn_cancel"
            style="@style/dialogCancelBtn"
            android:text="@string/btn_cancel" />

        <Button
            android:id="@id/btn_confirm"
            style="@style/dialogConfirmBtn"
            android:text="@string/btn_confirm" />
    </LinearLayout>
</LinearLayout>