<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.omarea.vtools.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="360dp"
                        android:layout_height="match_parent"
                        android:paddingBottom="56dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="56dp"
                        tools:context=".RamFragment">

                        <TextView
                            android:id="@+id/home_chat_helpinfo"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center_horizontal"
                            android:text="◀ 滑动切换到“性能监视器”"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.omarea.ui.RamChatView
                            android:id="@+id/home_raminfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:free="0"
                            app:total="1" />

                        <LinearLayout
                            android:id="@+id/home_clear_ram"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="RAM"
                                android:textSize="60dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/home_raminfo_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0 / 0MB"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="360dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="34dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/cpu_core_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="核心数：" />

                            <TextView
                                android:id="@+id/cpu_core_total_load"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="负载：" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/cpu_core_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="22dp"
                            android:layout_marginTop="6dp"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="2" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:showDividers="beginning"
            android:shrinkColumns="0,1,2"
            android:stretchColumns="0,1,2,3">

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/sdfree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="2"
                    android:background="#22888888"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/datafree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:background="#22888888"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/powermode_toggles"
                android:layout_marginBottom="4dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_powersave"
                    android:layout_marginLeft="4dp"
                    android:background="@color/color_powersave"
                    android:text="省电"
                    android:textColor="#66ffffff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_defaultmode"
                    android:layout_marginLeft="4dp"
                    android:background="@color/color_balance"
                    android:text="均衡"
                    android:textColor="#66ffffff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_gamemode"
                    android:layout_marginLeft="4dp"
                    android:background="@color/color_perf"
                    android:text="性能"
                    android:textColor="#66ffffff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_fastmode"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/color_fast"
                    android:text="极速"
                    android:textColor="#66ffffff"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>
