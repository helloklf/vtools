<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:padding="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <CheckBox
        android:focusableInTouchMode="false"
        android:id="@+id/select_state"
        android:layout_height="45dp"
        android:layout_width="40dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_column="0"
        android:editable="false"
        android:layout_row="0"
        android:layout_rowSpan="2" />

    <ImageView
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:id="@+id/ItemIcon"
        android:minHeight="45dp"
        android:maxHeight="45dp"
        android:minWidth="45dp"
        android:maxWidth="45dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowSpan="2" />

    <LinearLayout android:orientation="vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:paddingLeft="7dp"
        android:layout_gravity="fill_horizontal">
        <TextView
            android:text="AppName"
            android:id="@+id/ItemTitle"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp" />

        <TextView
            android:text="com.android.PackageName.test"
            android:layout_gravity="fill_horizontal"
            android:paddingTop="8dp"
            android:id="@+id/ItemText"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:textColor="#8888" />
    </LinearLayout>

    <TextView
        android:minWidth="40dp"
        android:textAlignment="textEnd"
        android:textColor="#0094ff"
        android:id="@+id/ItemEnabledStateText"
        android:layout_width="40dp"
        android:textSize="12dp"
        android:layout_column="3"
        android:layout_row="0"/>

    <TextView
        android:textAlignment="textEnd"
        android:textColor="#d00"
        android:textSize="12dp"
        android:id="@+id/ItemWranText"
        android:layout_width="40dp"
        android:minWidth="40dp"
        android:layout_column="3"
        android:layout_row="1"/>
</GridLayout>